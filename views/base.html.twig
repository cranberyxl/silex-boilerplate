    {% form_theme form 'form/bootstrap_form_div_layout.html.twig' %}
{%  endif %}
<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{% block title 'Big Map' %}</title>
        <meta name="description" content="">
        <meta name="author" content="">

        <meta name="viewport" content="width=device-width">

        <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap.min.css">
        <style>
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
        </style>
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap-responsive.min.css">
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/style.css">
        <script src="/js/libs/modernizr-2.6.1.custom.js"></script>
    </head>

    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/">Brand Name</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li{% if activetab == 'home' %} class="active"{% endif %}><a href="{{ path('home') }}">Home</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            {% block content  '' %}
            <hr>

            <footer>
                <p>&copy; Some place 2013</p>
            </footer>

        </div> <!-- /container -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ app.request.basepath }}/js/libs/jquery-1.8.0.min.js"><\/script>')</script>

        <script src="{{ app.request.basepath }}/js/libs/bootstrap/transition.js"></script>
        <script src="{{ app.request.basepath }}/js/libs/bootstrap/button.js"></script>
        <script src="{{ app.request.basepath }}/js/libs/bootstrap/dropdown.js"></script>
        <script src="{{ app.request.basepath }}/js/libs/bootstrap/collapse.js"></script>

        <script src="{{ app.request.basepath }}/js/script.js"></script>
    </body>
</html>
